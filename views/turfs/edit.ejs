<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Turf</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/turfs/<%=turf._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">title</label>
                    <input class="form-control" type="text" id="title" name="turf[title]"  value="<%=turf.title%>" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" id="location" name="turf[location]"  value="<%=turf.location%>" required>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Choose images</label>
                    <input class="form-control" type="file" id="image">
                  </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Turfprice</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label"  name="turf[price]"  value="<%=turf.price%>" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="turf[description]" required><%= turf.description%></textarea>
                </div>
                <div class="mb-3">
                    <% turf.images.forEach(function(img,i){ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        
                    <% }) %> 
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update turf</button>
                </div>
            </form>
            <a href="/turfs/<%=turf._id%>">Back to turfs</a>
        </div>
    </div>